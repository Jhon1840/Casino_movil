<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".comprarD"
    android:background="#F33434"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Saldo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="¡TIENDA!"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif"
            android:textSize="30sp"
            android:layout_marginBottom="70dp"/>

        <TextView
            android:id="@+id/saldoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="¡TIENDA!"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:layout_marginTop="-80dp"
            android:layout_marginBottom="70dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:background="@drawable/menusito"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationView"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="#fd6084"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/monedas" />

                    <Button
                        android:id="@+id/btn100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:backgroundTint="#F33434"
                        android:text="100$" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/menusito"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationView2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="#fd6084"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/muchass" />

                    <Button
                        android:id="@+id/btn2000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:backgroundTint="#F33434"
                        android:text="2000$" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <LinearLayout
                android:background="@drawable/menusito"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationView4"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="#fd6084"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/monedas" />

                    <Button
                        android:id="@+id/btn200"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:backgroundTint="#F33434"
                        android:text="200$" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/menusito"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationView5"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="#fd6084"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/demasiadas" />

                    <Button
                        android:id="@+id/btn50000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:backgroundTint="#F33434"
                        android:text="50000$" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>